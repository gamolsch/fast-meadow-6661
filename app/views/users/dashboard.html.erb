      <header>
        <h2 style="width: 50%;display:inline"><a href="/"><img src="/assets/harpoon.png" width="200px"></a></h2>
      </header>

      <div class="search-bar">
        <label for="search">Search:</label>
        <input name="search" ng-model="search">
      </div>

      <div class="search-options">
        <p>Search Options:</p>
        <select ng-model="orderProp">
          <option value="name">Name</option>
          <option value="manufacturer">Manufacturer</option>
        </select>
      </div>

      <div class="item-list" ng-controller="ItemListController">
        <h1>Hello Angular!</h1>
        <ul ng-repeat="item in items | filter:search | orderBy:orderProp">
          <li>Name: {{ item.name }}</li>
          <li>Manufactuer: {{ item.manufacturer }}</li>
          <li>Code: {{ item.code }} </li>
          <li>Color: {{ item.color }}</li>
        </ul>
      </div>

      <footer style="margin-top:20%">
