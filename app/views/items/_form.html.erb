<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :manufacturer %><br>
    <%= f.text_field :manufacturer %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :lot_number %><br>
    <%= f.text_field :lot_number %>
  </div>
  <div class="field">
    <%= f.radio_button(:unit_of_measure, "ml") %>
    <%= f.label("Milliliters") %>
    <%= f.radio_button(:unit_of_measure, "g") %>
    <%= f.label("Grams") %><br>
  </div>
    <div class="field">
    <%= label :ammount_changed, "Amount Added" %><br>
    <%= text_field_tag :ammount_changed %>
  </div>
  <div class="field">
    <%= radio_button_tag(:storage, 1) %>
    <%= f.label("Gatorade Lab, Hazardous") %>
    <%= radio_button_tag(:storage, 2) %>
    <%= f.label("Gatorade Lab, Non-Hazardous") %>
    <%= radio_button_tag(:storage, 3) %>
    <%= f.label("Gatorade Lab, Main Inventory") %>
    <%= radio_button_tag(:storage, 4) %>
    <%= f.label("Pilot Plant, Hazardous") %>
    <%= radio_button_tag(:storage, 5) %>
    <%= f.label("Pilot Plant, Non-Hazardous") %>
  </div>
  <br />
  <div class="field">
    <%= f.label :manufactured_on %><br>
    <%= f.date_select :manufactured_on, :order => [:month, :day, :year] %>
  </div>
  <div class="field">
    <%= f.label :expired_on %><br>
    <%= f.date_select :expired_on, :order => [:month, :day, :year] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
